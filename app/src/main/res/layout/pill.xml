<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="@dimen/pill_margin_top_normal"
    android:background="@drawable/pill_drawable"
    android:clickable="true"
    android:focusable="true"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:padding="@dimen/pill_border_stroke_width"
    style="@style/AppTheme">

    <View
        android:id="@+id/divider_1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        />

    <View
        android:id="@+id/divider_2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/pill_tap_flash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pill_tap_ripple"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:visibility="gone"
        />

    <View
        android:id="@+id/section_1_flash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pill_tap_ripple"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:visibility="gone"
        />

    <View
        android:id="@+id/section_2_flash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pill_tap_ripple"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:visibility="gone"
        />

    <View
        android:id="@+id/section_3_flash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pill_tap_ripple"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:visibility="gone"
        />

</FrameLayout>