<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/gesture_wrapper"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/toggle_gestures"
            android:src="@drawable/ic_gesture_black_24dp"
            android:tint="@color/color_disabled"
            android:background="@drawable/circle"
            android:padding="8dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/gesture_status"
            android:layout_marginTop="8dp"
            android:text="@string/gestures_off"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_wrapper"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/toggle_nav"
            android:src="@drawable/ic_border_bottom_black_24dp"
            android:tint="@color/color_disabled"
            android:background="@drawable/circle"
            android:padding="8dp"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/nav_status"
            android:layout_marginTop="8dp"
            android:text="@string/nav_shown"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_settings_black_24dp" />

</LinearLayout>