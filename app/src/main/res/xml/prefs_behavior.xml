<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreference
        android:title="@string/hide_in_fullscreen"
        android:summary="@string/hide_in_fullscreen_desc"
        android:key="hide_in_fullscreen"
        android:icon="@drawable/ic_visibility_off_black_24dp"
        android:defaultValue="true" />

    <!--<SwitchPreference-->
        <!--android:title="@string/hide_on_launcher"-->
        <!--android:summary="@string/hide_on_launcher_desc"-->
        <!--android:key="hide_on_launcher" />-->

    <SwitchPreference
        android:title="@string/static_pill"
        android:summary="@string/static_pill_desc"
        android:icon="@drawable/ic_swap_vert_black_24dp"
        android:key="static_pill" />

    <com.zacharee1.sliderpreferenceembedded.SliderPreferenceEmbedded
        android:title="@string/hold_time"
        android:key="hold_time"
        android:icon="@drawable/ic_timer_black_24dp"
        app:seek_min="100"
        app:seek_max="2000"
        android:defaultValue="1000"
        app:show_text="true"
        app:format="%sms" />

    <com.zacharee1.sliderpreferenceembedded.SliderPreferenceEmbedded
        android:title="@string/vibration_duration"
        android:key="vibration_duration"
        android:icon="@drawable/ic_timer_black_24dp"
        app:seek_min="0"
        app:seek_max="500"
        android:defaultValue="50"
        app:show_text="true"
        app:format="%sms" />

    <com.zacharee1.sliderpreferenceembedded.SliderPreferenceEmbedded
        android:title="@string/anim_duration"
        android:key="anim_duration"
        android:icon="@drawable/ic_timer_black_24dp"
        app:seek_min="0"
        app:seek_max="500"
        android:defaultValue="500"
        app:show_text="true" />

</PreferenceScreen>