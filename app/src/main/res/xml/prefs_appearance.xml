<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/color_prefs">

        <SwitchPreference
            android:title="@string/show_pill_shadow"
            android:key="show_shadow"
            android:icon="@drawable/ic_shadow_black_24dp"
            android:defaultValue="true" />

        <com.jaredrummler.android.colorpicker.ColorPreference
            android:title="@string/pill_color"
            android:key="pill_bg"
            android:icon="@drawable/ic_color_lens_black_24dp"
            app:cpv_showAlphaSlider="true"
            app:cpv_allowCustom="true" />

        <com.jaredrummler.android.colorpicker.ColorPreference
            android:title="@string/pill_border_color"
            android:key="pill_fg"
            android:icon="@drawable/ic_color_lens_black_24dp"
            app:cpv_showAlphaSlider="true"
            app:cpv_allowCustom="true" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/dimension_prefs">

        <com.pavelsikun.seekbarpreference.SeekBarPreference
            app:msbp_measurementUnit="dp"
            app:msbp_minValue="0"
            app:msbp_maxValue="10"
            android:defaultValue="8"
            android:title="@string/pill_corner_radius"
            android:icon="@drawable/ic_rounded_corner_black_24dp"
            android:key="pill_corner_radius" />

        <com.pavelsikun.seekbarpreference.SeekBarPreference
            app:msbp_minValue="1"
            app:msbp_maxValue="1000"
            app:msbp_scale="0.1"
            app:msbp_measurementUnit="%"
            android:defaultValue="@integer/pill_width_percent"
            android:title="@string/width"
            android:icon="@drawable/ic_arrow_expanded_horizontal_black_24dp"
            android:key="custom_width_percent" />

        <com.pavelsikun.seekbarpreference.SeekBarPreference
            app:msbp_measurementUnit="%"
            app:msbp_minValue="0"
            app:msbp_maxValue="200"
            app:msbp_scale="0.1"
            android:defaultValue="@integer/pill_height_percent"
            android:title="@string/height"
            android:icon="@drawable/ic_arrow_expanded_vertical_black_24dp"
            android:key="custom_height_percent" />

        <com.pavelsikun.seekbarpreference.SeekBarPreference
            app:msbp_minValue="-1000"
            app:msbp_maxValue="1000"
            app:msbp_scale="0.1"
            app:msbp_measurementUnit="%"
            android:defaultValue="@integer/pill_x_pos_percent"
            android:title="@string/position_x"
            android:icon="@drawable/ic_swap_horiz_black_24dp"
            android:key="custom_x_percent" />

        <com.pavelsikun.seekbarpreference.SeekBarPreference
            app:msbp_measurementUnit="%"
            app:msbp_minValue="0"
            app:msbp_maxValue="2000"
            app:msbp_scale="0.05"
            android:title="@string/position_y"
            android:icon="@drawable/ic_swap_vert_black_24dp"
            android:key="custom_y_percent" />

    </PreferenceCategory>

</PreferenceScreen>