<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="toggle_gestures"
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_gesture"
        android:shortcutShortLabel="@string/toggle_gestures">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.xda.nobar"
            android:targetClass="com.xda.nobar.activities.ToggleGesturesActivity" />
    </shortcut>

    <shortcut
        android:shortcutId="toggle_nav"
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_nav"
        android:shortcutShortLabel="@string/toggle_nav">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.xda.nobar"
            android:targetClass="com.xda.nobar.activities.ToggleNavActivity" />
    </shortcut>

    <shortcut
        android:shortcutId="settings"
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_settings"
        android:shortcutShortLabel="@string/settings">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="com.xda.nobar"
            android:targetClass="com.xda.nobar.activities.SettingsActivity" />
    </shortcut>
</shortcuts>